    <HierarchicalDataTemplate x:Key="InterfaceNodeTemplate" DataType="data:Interface">
        <Border Padding="2,0,2,0" Margin="3,0,3,0" Background="Transparent" Tag="{Binding}">
            <ig:DragDropManager.DragSource>
                <ig:DragSource IsDraggable="True" DragEnd="_OnDragEnd" DragEnter="_OnDragEnter" DragLeave="_OnDragLeave"
                               MoveCursorTemplate="{StaticResource MoveCursorTemplate}" DropNotAllowedCursorTemplate="{StaticResource DropNotAllowedTemplate}">
                    <ig:DragSource.DragChannels>
                        <System:String>Interface</System:String>
                    </ig:DragSource.DragChannels>
                </ig:DragSource>
            </ig:DragDropManager.DragSource>
            <nodes:InterfaceNodeView DataContext="{Binding}"/>
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Edit" Tag="{Binding}" Click="_Interface_EditClick" />
                    <MenuItem Header="Remove" Tag="{Binding}" Click="_Interface_RemoveClick" />
                </ContextMenu>
            </Border.ContextMenu>
        </Border>
    </HierarchicalDataTemplate>

    <HierarchicalDataTemplate x:Key="MacroNodeTemplate" DataType="data:Macro">
        <Border Padding="2,0,2,0" Margin="3,0,3,0" Background="Transparent" Tag="{Binding}">
            <ig:DragDropManager.DragSource>
                <ig:DragSource IsDraggable="True" DragEnd="_OnDragEnd" DragEnter="_OnDragEnter" DragLeave="_OnDragLeave" DragStart="Macro_OnDragStart"
                               MoveCursorTemplate="{StaticResource MoveCursorTemplate}" DropNotAllowedCursorTemplate="{StaticResource DropNotAllowedTemplate}">
                    <ig:DragSource.DragChannels>
                        <System:String>Macro</System:String>
                    </ig:DragSource.DragChannels>
                </ig:DragSource>
            </ig:DragDropManager.DragSource>
            <nodes:MacroNodeView DataContext="{Binding}"/>
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Edit" Tag="{Binding}" Click="_Macro_EditClick" />
                    <MenuItem Header="Remove" Tag="{Binding}" Click="_Macro_RemoveClick" />
                </ContextMenu>
            </Border.ContextMenu>
        </Border>
    </HierarchicalDataTemplate>

    <HierarchicalDataTemplate x:Key="DefaultNodeDataTemplate">
        <Border Padding="1" Margin="3,0,3,0">
            <StackPanel Orientation="Horizontal" Margin="1,0,1,0">
                <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="3,0,0,0" />
            </StackPanel>
        </Border>
    </HierarchicalDataTemplate>

    <HierarchicalDataTemplate x:Key="TableNodeTemplate" DataType="data:Table">
